<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="notification"
        app:title="알림 설정">
        <SwitchPreferenceCompat
            app:key="noti_message"
            app:title="메시지 알림"/>
        <SwitchPreferenceCompat
            app:key="noti_sound"
            app:title="소리 알림"/>
        <SwitchPreferenceCompat
            app:key="noti_push"
            app:title="푸시 알람 받기"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:key="etc"
        app:title="기타설정">
        <EditTextPreference
            app:key="id"
            app:title="ID 설정"/>
        <ListPreference
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values"
            app:key="color"
            app:title="색상선택"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:key="dataNSync"
        app:title="데이터 및 동기화">
        <SwitchPreferenceCompat
            app:key="auto_sync"
            app:title="자동 동기화"/>
        <ListPreference
            android:entries="@array/syncTimeGap"
            android:entryValues="@array/syncTimeGap_values"
            app:key="syncTime"
            app:title="동기화 주기"
            android:dependency="auto_sync"/>


    </PreferenceCategory>

</PreferenceScreen>